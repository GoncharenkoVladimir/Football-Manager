{% extends 'AppBundle::main.html.twig' %}

{% block title %}Team page!!!{% endblock %}

{% block content %}
    <div class="content team-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6 class="title-table">Состав команды</h6>
                    <ul class="team">
                        {% for value in players %}
                            {% if value.command == team.idTeam %}
                                <li><a href="{{ path('player', {'id': value.id }) }}">{{ value.number }}. {{ value.name }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>

        </div>
    </div>
{% endblock content %}
{% block titlepage %}<h3 class="text-center">Сборная страны {{ team.nameTeam }}</h3>{% endblock titlepage %}